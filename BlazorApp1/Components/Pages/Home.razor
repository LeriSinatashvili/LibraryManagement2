@page "/"
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<br />
<button @onclick="Button1">Button 1</button>
<br />
<button @onclick="Button2">Button 2</button>
<br />
<button @onclick="Button3">Button 3</button>

<h1>@responseMessage</h1>

@code {
    private string responseMessage = "";

    private async Task Button1()
    {
        var response = await Http.GetAsync("https://localhost:7042/Another/some1");

        var responseString = await response.Content.ReadAsStringAsync();
        responseMessage = responseString;
    }

    private async Task Button2()
    {
        var response = await Http.GetAsync("https://localhost:7042/Another/some2");

        var responseString = await response.Content.ReadAsStringAsync();
        responseMessage = responseString;
    }

    private async Task Button3()
    {
        var response = await Http.GetAsync("https://localhost:7042/Another/some3");

        var responseString = await response.Content.ReadAsStringAsync();
        responseMessage = responseString;
    }
}